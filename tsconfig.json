{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "types": ["react-native", "node"],
    "typeRoots": ["@types", "./node_modules/@types"],
    "paths": {
      "@inspectreplyai/*": ["src/*"],
      "@components": ["src/components"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"],
      "types/*": ["./@types/*"]
    },
    "module": "esnext",
    "target": "ES2019",
    "lib": ["ES2019", "DOM"],
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    ".eslintrc.js"
  ]
}
